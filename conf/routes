# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
#GET         /                         controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
#GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

POST        /users/new                controllers.HomeController.createUser()
POST        /locations/new            controllers.HomeController.createLocation()
POST        /visits/new            controllers.HomeController.createVisit()

GET         /users/:id                controllers.HomeController.userInfo(id:Int)
GET         /locations/:id            controllers.HomeController.locationInfo(id:Int)
GET         /visits/:id                controllers.HomeController.visitInfo(id:Int)


GET         /users/:id/visits         controllers.HomeController.userVisits(id:Int)
GET         /locations/:id/avg        controllers.HomeController.averageEvaluation(id:Int)
POST        /users/:id                controllers.HomeController.updateUser(id:Int)
POST        /locations/:id            controllers.HomeController.updateLocation(id:Int)
POST        /visits/:id            controllers.HomeController.updateVisit(id:Int)
